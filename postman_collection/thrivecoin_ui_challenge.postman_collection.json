{
	"info": {
		"_postman_id": "daa984b0-bd77-4c3b-996a-255c3cdc5545",
		"name": "ThriveCoin UI Challenge",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Sign In",
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"sign_in\": {\n        \"email\": \"{{email}}\",\n        \"password\": \"{{password}}\"\n    }\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{api_url}}/v1/users/sign_in",
					"host": [
						"{{api_url}}"
					],
					"path": [
						"v1",
						"users",
						"sign_in"
					]
				}
			},
			"response": []
		},
		{
			"name": "Refresh Token",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{token}}",
							"type": "string"
						}
					]
				},
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{api_url}}/v1/users/refresh_token",
					"host": [
						"{{api_url}}"
					],
					"path": [
						"v1",
						"users",
						"refresh_token"
					]
				}
			},
			"response": []
		},
		{
			"name": "List Invitations",
			"request": {
				"auth": {
					"type": "bearer",
					"bearer": [
						{
							"key": "token",
							"value": "{{token}}",
							"type": "string"
						}
					]
				},
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{api_url}}/v1/users/invitations",
					"host": [
						"{{api_url}}"
					],
					"path": [
						"v1",
						"users",
						"invitations"
					]
				}
			},
			"response": []
		},
		{
			"name": "List Recent Connections",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{api_url}}/v1/users/recent_connections",
					"host": [
						"{{api_url}}"
					],
					"path": [
						"v1",
						"users",
						"recent_connections"
					]
				}
			},
			"response": []
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	],
	"variable": [
		{
			"key": "api_url",
			"value": "https://thc-ui-api.thrivecoin.com"
		},
		{
			"key": "email",
			"value": "batman@thrivecoin.com"
		},
		{
			"key": "token",
			"value": null
		},
		{
			"key": "password",
			"value": "myStrongPassword"
		}
	]
}